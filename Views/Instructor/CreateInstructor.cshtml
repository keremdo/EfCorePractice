@model Instructor
<div class="mb-3">
    <form asp-controller="Instructor" asp-action="CreateInstructor" method="post">
        <div class="form-group">
            <label asp-for="InstructorName">Name</label>
            <input class="form-control" asp-for="InstructorName">
        </div>
        <div class="form-group">
            <label asp-for="InstructorSurName">Surname</label>
            <input class="form-control" asp-for="InstructorSurName">
        </div>
        <div class="form-group">
            <label asp-for="InstructorEmail">Email address</label>
            <input class="form-control" asp-for="InstructorEmail">
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone Number</label>
            <input class="form-control" asp-for="Phone">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-secondary">
                Create
            </button>
            <a asp-controller="Student" asp-action="StudentList" class="btn btn-outline-secondary">List</a>
        </div>
    </form>
</div>