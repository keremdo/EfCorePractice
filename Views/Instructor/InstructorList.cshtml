@model IEnumerable<Instructor>

    <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Instructor Number</th>
            <th scope="col">Instructor Name</th>
            <th scope="col">Instructor Surname</th>
            <th scope="col">Move</th>
            
          </tr>
        </thead>
        <tbody>
            @{
               int i = 1;
            }
          
            @foreach(var s in Model)
            {<tr>
                <th scope="row">@{@i ; i++;}</th>
                <th scope="row">@s.InstructorName</th>
                <th scope="row">@s.InstructorSurName</th>
                <th scope="row">
                    <a asp-controller="Instructor" asp-action="Details" asp-route-id="@s.Id" class="btn btn-outline-secondary">Details</a>
                    
                    <a asp-controller="Instructor" asp-action="DeleteInstructor" asp-route-id="@s.Id"  class="btn btn-outline-danger">Delete</a>
                </th>
                
             </tr>
            }
            
        </tbody>
      </table>
      <div class="mt-3">
        <a asp-controller="Instructor" asp-action="CreateInstructor" class="btn btn-outline-secondary">Insert Instructor</a>
    </div>