@model Instructor
<div class="mb-3">
    <form asp-controller="Instructor" asp-action="EditInstructor" method="post">
        <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label asp-for="InstructorName">Name</label>
            <input class="form-control" asp-for="InstructorName">
        </div>
        <div class="form-group">
            <label asp-for="InstructorSurName">Sur Name</label>
            <input class="form-control" asp-for="InstructorSurName">
        </div>
        <div class="form-group">
            <label asp-for="InstructorEmail">Email address</label>
            <input class="form-control" asp-for="InstructorEmail">
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone Number</label>
            <input class="form-control" asp-for="Phone">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-secondary">
                Modify
            </button>
            <a asp-controller="Instructor" asp-action="InstructorList" class="btn btn-outline-secondary">List</a>
        </div>
    </form>
</div>