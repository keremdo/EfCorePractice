@model Student
<div class="mb-3">
    <form asp-controller="Student" asp-action="EditStudent" method="post">
        <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label asp-for="StudentName">Name</label>
            <input class="form-control" asp-for="StudentName">
        </div>
        <div class="form-group">
            <label asp-for="StudentSurName">Sur Name</label>
            <input class="form-control" asp-for="StudentSurName">
        </div>
        <div class="form-group">
            <label asp-for="Email">Email address</label>
            <input class="form-control" asp-for="Email">
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Phone Number</label>
            <input class="form-control" asp-for="PhoneNumber">
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-secondary">
                Modify
            </button>
            <a asp-controller="Student" asp-action="StudentList" class="btn btn-outline-secondary">List</a>
        </div>
    </form>
</div>