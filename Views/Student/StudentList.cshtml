@model IEnumerable<Student>

<table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">Student Number</th>
        <th scope="col">Student Name</th>
        <th scope="col">Student Surname</th>
        <th scope="col">Move</th>
        
      </tr>
    </thead>
    <tbody>
        @{
           int i = 1;
        }
      
        @foreach(var s in Model)
        {<tr>
            <th scope="row">@{@i ; i++;}</th>
            <th scope="row">@s.StudentName</th>
            <th scope="row">@s.StudentSurName</th>
            <th scope="row">
                <a asp-controller="Student" asp-action="Details" asp-route-id="@s.Id" class="btn btn-outline-secondary">Details</a>
                
                <a asp-controller="Student" asp-action="DeleteStudent" asp-route-id="@s.Id" class="btn btn-outline-danger">Delete</a>
            </th>
            
         </tr>
        }
        
    </tbody>
  </table>
  <div class="mt-3">
    <a asp-controller="Student" asp-action="CreateStudent" class="btn btn-outline-secondary">Insert Student</a>
</div>