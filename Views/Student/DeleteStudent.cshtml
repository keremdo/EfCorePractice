@model Student
<div class="card-bordered">
    <div class="card-body">
        <form action="DeleteStudent.cshtml" method="post">
            <p>@Model.StudentName isimli öğrenciyi silmek istediğinize emin misini?</p>
            <input type="hidden" asp-for="@Model.Id">
            <button type="submit" class="btn btn-outline-danger">Delete</button>
            <a asp-controller="Student" asp-action="StudentList" class="btn btn-outline-primary">Cancel</a>
        </form>
    </div>
</div>