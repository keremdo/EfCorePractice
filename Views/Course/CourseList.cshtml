@model IEnumerable<Course>

    <table class="table table-bordered">
        <thead>
          <tr>
            <th scope="col">Course Number</th>
            <th scope="col">Course Title</th>
            <th scope="col">Course Name</th>
            <th scope="col">Move</th>
            
          </tr>
        </thead>
        <tbody>
            @{
               int i = 1;
            }
          
            @foreach(var s in Model)
            {<tr>
                <th scope="row">@{@i ; i++;}</th>
                <th scope="row">@s.CourseName</th>
                <th scope="row">@s.CourseTitle</th>
                <th scope="row">
                    <a asp-controller="Course" asp-action="EditCourse" asp-route-id="@s.Id" class="btn btn-outline-secondary">Edit</a>
                    <a asp-controller="Course" asp-action="DeleteCourse" asp-route-id="@s.Id" class="btn btn-outline-danger">Delete</a>
                </th>
             </tr>
            }
            
        </tbody>
      </table>
      <div class="mt-3">
        <a asp-controller="Course" asp-action="CreateCourse" class="btn btn-outline-secondary">Insert Course</a>
    </div>