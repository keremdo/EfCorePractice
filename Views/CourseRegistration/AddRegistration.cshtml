@model CourseRegistration

<div class="mb-3">
    <form asp-controller="CourseRegistration" asp-action="AddRegistration" method="post">
        <div class="form-group">
            <label asp-for="StudentId">Student Name</label>
            <select asp-for="StudentId" asp-items="ViewBag.Students" class="form-control">
                <option value="">Choose</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="CourseId">Course Name</label>
            <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-control">
                <option value="">Choose</option>
            </select>
        </div>
        <div class="mt-3">
            <button type="submit" class="btn btn-outline-secondary">
                Save
            </button>
            <a asp-controller="CourseRegistration" asp-action="RegistrationList" class="btn btn-outline-secondary">List</a>
        </div>
    </form>
</div>